<div class="card mb-2" >
<% @users&.each do |user|%>

    <div class="d-flex justify-content-between mb-3">
      <div class="m-5">
        <img src=<%= user.photo %> alt="<%= user.name %>'s profile picture" />
      </div>
      <div class="m-5 flex-grow-1">
        <article class="card-body " style="width: 18rem;"> 
          <h2><a><%= link_to user.name, user %></a>
          </h2>
          </article>
      </div>
      <div class="mb-2 mr-5 d-flex flex-wrap align-content-end">
          <h5>Number of Posts: <%= user.post_counter %>
          </h5>
        </div>
    </div>
    <% end %>
  </div>