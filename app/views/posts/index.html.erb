<div class="card m-5">
<div class="d-flex justify-content-between">
<div class="m-1"><%= image_tag @user.photo, :height => "150px", :width => "150px" %></div>
<div class="m-5 flex-grow-1"><h1><%= @user.name %></h1></div>
<div class="mb-2 mr-5 d-flex flex-wrap align-content-end"><h5>Number of Posts: <%= @user.post_counter%></h5></div>
</div>
</div>

<% @posts.each do |post| %>
  <div class="card m-5"> 
    <div class="d-flex justify-content-between">
      <div> 
        <h2><%= post.title %></h2> 
        <p>Post Body: <%= post.text %></p>
        <div class="mb-1 mr-5 d-flex flex-direction-row flex-wrap align-content-end w-25">
          <span>Comments count: <%= post.comments_counter %></span>
          <span class="ml-2">Likes Count: <%= post.likes_counter %></span>
        </div>
        <div>
    <h4>Comments:</h4>
    <div>
      <% post.recent_comments.each do |comment| %>
        <p><%= comment.author.name %>: <%= comment.text %></p>
      <% end %>
    </div>
  </div>

      </div>
    </div>
  </div>
<% end %>

